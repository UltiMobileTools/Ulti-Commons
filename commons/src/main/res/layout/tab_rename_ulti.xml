<?xml version="1.0" encoding="utf-8"?>
<com.ultimobiletools.commons.views.RenameUltiTab xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rename_ulti_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin"
    android:paddingEnd="@dimen/activity_margin">

    <com.ultimobiletools.commons.views.CustomTextInputLayout
        android:id="@+id/rename_ulti_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/string_to_add">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rename_ulti_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/normal_text_size" />

    </com.ultimobiletools.commons.views.CustomTextInputLayout>

    <RadioGroup
        android:id="@+id/rename_ulti_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rename_ulti_hint">

        <com.ultimobiletools.commons.views.CustomCompatRadioButton
            android:id="@+id/rename_ulti_radio_append"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:paddingTop="@dimen/normal_margin"
            android:paddingBottom="@dimen/normal_margin"
            android:text="@string/append_filenames" />

        <com.ultimobiletools.commons.views.CustomCompatRadioButton
            android:id="@+id/rename_ulti_radio_prepend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/normal_margin"
            android:paddingBottom="@dimen/normal_margin"
            android:text="@string/prepend_filenames" />

    </RadioGroup>
</com.ultimobiletools.commons.views.RenameUltiTab>
